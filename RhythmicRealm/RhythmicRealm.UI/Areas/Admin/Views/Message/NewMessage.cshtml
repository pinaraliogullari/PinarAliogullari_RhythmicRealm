 @model AdminMessageViewModel
 
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                @await Html.PartialAsync("_MessageBoxLeftSidePartialView")
                <!-- /.col -->
                <div class="col-md-9">
                    <form asp-area="Admin" asp-controller="Message" asp-action="NewMessage" method="post">
                        <div class="card card-primary card-outline">
                            <div class="card-header">
                                <h3 class="card-title">Yeni Mesaj Oluştur</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="ReceiverMail"></label>
                                    <input asp-for=ReceiverMail class="form-control">
                                    <span class="text-danger" asp-validation-for="ReceiverMail"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Subject"></label>
                                    <input asp-for=Subject class="form-control">
                                    <span class="text-danger" asp-validation-for="Subject"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Content"></label>
                                    <textarea asp-for=Content id="compose-textarea" class="form-control" style="height: 300px"></textarea>
                                    <span class="text-danger" asp-validation-for="Content"></span>
                                </div>
                                <div class="form-group">
                                    <div class="btn btn-default btn-file">
                                        <i class="fas fa-paperclip"></i> Dosya Ekle
                                        <input type="file" name="attachment">
                                    </div>
                                    <p class="help-block">Max. 32MB</p>
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <div class="float-right">

                                    <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>
                                </div>
                                <a asp-area="Admin" asp-controller="Message" asp-action="Index" type="reset" class="btn btn-default"><i class="fas fa-times"></i> İptal Et</a>
                            </div>
                            <!-- /.card-footer -->
                        </div>
                        <!-- /.card -->
                    </form>
                 
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

@section BottomScripts {
    @await Html.PartialAsync("_SummerNotePartial")

}