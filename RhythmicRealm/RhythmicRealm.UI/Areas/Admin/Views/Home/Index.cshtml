@model List<OrderListViewModel>

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
            </div>
        </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-chart-pie mr-1"></i>
                                Siparişler
                            </h3>
                        </div>
                        <table class="table table-striped table-valign-middle">
                            <thead>
                                <tr>
                                    <th>Sipariş Numarası</th>
                                    <th>Sipariş Tarihi</th>
                                    <th>Üye Adı Soyadı</th>
                                    <th>Sİpariş Tutarı</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model)
                                {
                                    <tr>
                                        <td>@order.OrderNumber</td>
                                        <td>@order.OrderDate</td>
                                        <td>@($"{order.FirstName} {order.LastName}")</td>
                                        <td>@($"{order.TotalPrice():C2}")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-md-10 mb-3">
                            <div class="small-box bg-info">
                                <div class="inner">
                                    <h3>44</h3>
                                    <p>Yeni Ürünler</p>
                                </div>
                                <div class="icon">
                                    <i class="ion ion-person-add"></i>
                                </div>
                                <a asp-area="Admin" asp-controller="Home" asp-action="GetNewProducts" class="small-box-footer">İncele <i class="fas fa-arrow-circle-right"></i></a>
                            </div>
                        </div>
                        <div class="col-md-10 mb-3">
                            <div class="small-box bg-warning">
                                <div class="inner">
                                    <h3>44</h3>
                                    <p>Bugün Kayıt Olan Kullanıcılar</p>
                                </div>
                                <div class="icon">
                                    <i class="ion ion-person-add"></i>
                                </div>
                                <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>