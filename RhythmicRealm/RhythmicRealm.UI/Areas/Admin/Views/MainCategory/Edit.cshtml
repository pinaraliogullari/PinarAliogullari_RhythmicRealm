@model EditMainCategoryViewModel


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">

                <div class="col-sm-6">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>Ana Kategori Bilgileri</h4>
                        </div>
                        <div>
                            <a asp-area="Admin"
                               asp-controller="MainCategory"
                               asp-action="Index"
                               class="btn btn-dark btn-sm">
                                Ana Kategori Listesi
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-6">
                    <div class="card">
                        <!-- /.card-header -->
                        <div class="card-body">
                            <form asp-area="Admin"
                                  asp-controller="MainCategory"
                                  asp-action="Edit"
                                  method="post">
                                <input type="hidden" asp-for="@Model.Id" />
                                <div class="d-flex justify-content-between">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="@Model.Name" class="control-label"></label>
                                            <input asp-for="@Model.Name" class="form-control" />
                                            <span asp-validation-for="@Model.Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="@Model.Url" class="control-label"></label>
                                            <input asp-for="@Model.Url" class="form-control" />
                                            <span asp-validation-for="@Model.Url" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mt-4">
                                        <div class="icheck-primary d-inline">
                                            <input asp-for="@Model.IsActive" type="checkbox" checked id="checkboxSuccess1">
                                            <label asp-for="@Model.IsActive" for="checkboxSuccess1">
                                            </label>
                                        </div>
                                    </div>
                                
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary float-right btn-sm">Güncelle</button>
                                </div>
                            </form>

                        </div>
                        <!-- /.card-body -->
                    </div>

                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
@section Styles {
    <link rel="stylesheet" href="~/admin/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <link rel="stylesheet" href="~/admin/plugins/summernote/summernote-bs4.min.css">
}
@section BottomScripts {
    @await Html.PartialAsync("_SummerNotePartial")
}