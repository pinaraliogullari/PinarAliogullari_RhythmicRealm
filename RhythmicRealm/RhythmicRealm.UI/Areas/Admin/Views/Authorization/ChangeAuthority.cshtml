@model ChangeAuthorityViewModel

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    Kullanıcı Rol Değiştirme
                </div>
                <div class="card-body">
                    <form method="post" action="@Url.Action("ChangeAuthority", "Authorization")">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label>Kullanıcı Adı:</label>
                            <input type="text" class="form-control" asp-for="UserName" readonly />
                        </div>
                        <div class="form-group">
                            <label>Ad Soyad:</label>
                            <input type="text" class="form-control" asp-for="FullName" readonly />
                        </div>
                        <div class="form-group">
                            <label>Rol:</label>
                            @foreach (var role in Model.AssignRole)
                            {
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" asp-for="@role.IsAssigned" />
                                    <label class="form-check-label">@role.Name</label>
                                </div>
                            }
                        </div>
                        <button type="submit" class="btn btn-success">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>