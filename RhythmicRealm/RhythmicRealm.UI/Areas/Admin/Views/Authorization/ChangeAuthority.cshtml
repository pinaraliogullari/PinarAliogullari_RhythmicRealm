@model ChangeAuthorityViewModel

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    Kullanıcı Rol Değiştirme
                </div>
                <div class="card-body">
                    <form asp-area="Admin"
                          asp-controller="Authorization"
                          asp-action="ChangeAuthority"
                          method="post">
                        <input type="hidden" asp-for="Id" />
                    
                        <div class="form-group">
                            <label>Kullanıcı Adı:</label>
                            <input type="text" class="form-control" asp-for="UserName" readonly />
                        </div>
                        <div class="form-group">
                            <label>Ad Soyad:</label>
                            <input type="text" class="form-control" asp-for="FullName" readonly />
                        </div>
                        <div class="form-group">
                            <label>Roller:</label>
                            @for (int i = 0; i < Model.AssignRole.Count; i++)
                            {
                                <div class="icheck-primary">
                                    <input type="radio" id="role_@Model.AssignRole[i].Id" name="SelectedRoleId" value="@Model.AssignRole[i].Id" />
                                    <label for="role_@Model.AssignRole[i].Id">@Model.AssignRole[i].Name</label>
                                </div>
                            }
                        </div>
                        <button type="submit" class="btn btn-primary float-right">Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>