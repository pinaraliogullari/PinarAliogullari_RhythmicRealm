
@{
	Layout = "_AboutUsContactLayout";
}
@model UserMessageViewModel

<!-- ***** Main Banner Area Start ***** -->
<div class="page-heading about-page-heading" id="top">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="inner-content">
                    <h2>Bize ulaşın</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ***** Main Banner Area End ***** -->
<!-- ***** Contact Area Starts ***** -->
<div class="contact-us">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div id="map">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d90186.37207676383!2d-80.13495239500924!3d25.9317678710111!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88d9ad1877e4a82d%3A0xa891714787d1fb5e!2sPier%20Park!5e1!3m2!1sen!2sth!4v1637512439384!5m2!1sen!2sth" width="100%" height="400px" frameborder="0" style="border:0" allowfullscreen></iframe>
                    <!-- You can simply copy and paste "Embed a map" code from Google Maps for any location. -->

                </div>
            </div>
            <div class="col-lg-6">
                <div class="section-heading">
                    <h2>Sorun, öneri ve destek talepleriniz için; </h2>
                    <span>Ekiplerimiz en kısa sürede sizinle iletişime geçecektir.</span>
                </div>
                <form id="contact" asp-area="Admin" asp-controller="Message" asp-action="NewContactMessage" method="post">
                    <div class="row">

                        <div class="col-lg-6">
                            <fieldset>
                                <input asp-for="@Model.UserMail" type="text" placeholder="Email adresiniz" required="">
                                <span class="text-danger" asp-validation-for="@Model.UserMail"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-6 ">
                            <fieldset>
                                <input asp-for="@Model.Subject" type="text" placeholder="Konu" required="">
                                <span class="text-danger" asp-validation-for="@Model.Subject"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-12">
                            <fieldset>
                                <textarea asp-for=@Model.Content rows="6" placeholder="Mesajınız" required=""></textarea>
                                <span class="text-danger" asp-validation-for="@Model.Content"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-12">
                            <fieldset>
                                <button type="submit" id="form-submit" class="main-dark-button"><i class="fa fa-paper-plane"></i></button>
                            </fieldset>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- ***** Contact Area Ends ***** -->
<!-- ***** Subscribe Area Starts ***** -->
<div class="subscribe">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="section-heading">
                    <h2>Bültenimize Abone Olarak %30 İndirimden Yararlanabilirsiniz</h2>
                </div>
                <form id="subscribe" asp-area="" asp-controller="Home" asp-action="Index" method="get">
                    <div class="row">
                        <div class="col-lg-5">
                            <fieldset>
                                <input name="name" type="text" id="name" placeholder="Adınız Soyadınız" required="">
                            </fieldset>
                        </div>
                        <div class="col-lg-5">
                            <fieldset>
                                <input name="email" type="text" id="email" placeholder="Email adresiniz" required="">
                            </fieldset>
                        </div>
                        <div class="col-lg-2">
                            <fieldset>
                                <button type="submit" id="form-submit" class="main-dark-button"><i class="fa fa-paper-plane"></i></button>
                            </fieldset>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-4">
                <div class="row">
                    <div class="col-6">
                        <ul>
                            <li>Mağaza adresi:<br><span>Sunny Isles Beach, FL 33160, United States</span></li>
                            <li>Telefon:<br><span>010-020-0340</span></li>
                            <li>Ofis adresi:<br><span>North Miami Beach</span></li>
                        </ul>
                    </div>
                    <div class="col-6">
                        <ul>
                            <li>Çalışma saatleri:<br><span>07:30 AM - 9:30 PM </span></li>
                            <li>Email:<br><span>rhythmicsite@hotmail.com</span></li>
                            <li>Sosya medya:<br><span><a href="#">Facebook</a>, <a href="#">Instagram</a>, <a href="#">Behance</a>, <a href="#">Linkedin</a></span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ***** Subscribe Area Ends ***** -->