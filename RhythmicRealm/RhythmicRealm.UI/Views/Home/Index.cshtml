
@model List<ProductViewModel>
@await Html.PartialAsync("_NavbarPartial")

<!-- SECTION -->
<div class="section">
	<!-- container -->
	<div class="container">


		<!-- row -->
		<div class="row">
			<!-- shop -->
			@{
				List<int> selectedIndices = new List<int> { 2,9,17, 23,26,34};

				// Seçilen indisler üzerinde döngü
				foreach (int index in selectedIndices)
				{
					var item = Model[index];

					<div class="col-md-4 col-xs-6">
						<div class="shop">
							<div class="shop-img">
								<img style="height:250px" src="~/images/products/@item.ImageUrl" alt="">
							</div>
							<div class="shop-body">
								<h3>@item.SubCategory.Name</h3>
								<a href="#" class="cta-btn">Ürünlere Göz At<i class="fa fa-arrow-circle-right"></i></a>
							</div>
						</div>
					</div>
				}
			}
				
			
			<!-- /shop -->
	
		</div>
		<!-- /row -->
	</div>
	<!-- /container -->
</div>
<!-- /SECTION -->
