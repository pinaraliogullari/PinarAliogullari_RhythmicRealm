@model List<BrandSlimViewModel>

<div class="section">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="section-title">
					<h3 class="title">Markalar</h3>
				</div>
			</div>
			<div class="col-md-12">
				<div class="row">
					<div class="products-tabs">
						<div id="tab2" class="tab-pane fade in active">
							<div class="products-slick" data-nav="#slick-nav-2">
								@foreach (var brand in Model)
								{
									<div class="product">
											<a asp-area="" asp-controller="Store" asp-action="ShowProducts" asp-route-id="@brand.Id">
											<div class="product-img">
												<img style="cursor:pointer" src="~/images/brands/@brand.ImageUrl" alt="">
											</div>
											</a>
										
										<div class="product-body">
											<p class="product-category"></p>
										</div>
									</div>
								}
							</div>
							<div id="slick-nav-2" class="products-slick-nav"></div>
						</div>
					
					</div>
				</div>
			</div>
		</div>
	</div>
</div>